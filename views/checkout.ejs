<!DOCTYPE html>
<html lang="pt-br">
    <head>
<%- include("./partials/header") %>
<link href="/stylesheets/orders/checkout.css" rel = "stylesheet">
</head>

    <body>
        <%- include("./partials/cabecalho") %>

        <div class="checkout-panel">
            <div class="panel-body">
              <h2 class="title">Pague aqui!</h2>
           
              <div class="progress-bar">
                <div class="step active"></div>
                <div class="step active"></div>
                <div class="step"></div>
                <div class="step"></div>
              </div>
           
              <div class="payment-method">
                <label for="card" class="method card">
                  <div class="card-logos">
                    <img src="https://designmodo.com/demo/checkout-panel/img/visa_logo.png"/>
                    <img src="https://designmodo.com/demo/checkout-panel/img/mastercard_logo.png"/>
                  </div>
           
                  <div class="radio-input">
                    <input id="card" type="radio" name="payment">
                    Pague R$ 196,00 com cartão de crédito
                  </div>
                </label>
           
                <label for="paypal" class="method paypal">
                  <img src="images/LogoPagaleve.png" id="pagaleve-logo">
                  <div class="radio-input">
                    <input id="paypal" type="radio" name="payment">
                    Pague R$ 196,00 com Pagaleve Pix 4x
                  </div>
                </label>
              </div>
           
              <div class="input-fields">
                <div class="column-1">
                  <label for="cardholder">Nome</label>
                  <input type="text" id="cardholder" />
           
                  <div class="small-inputs">
                    <div>
                      <label for="date">Data de Validade</label>
                      <input type="text" id="date"/>
                    </div>
           
                    <div>
                      <label for="verification">CVV / CVC *</label>
                      <input type="password" id="verification"/>
                    </div>
                  </div>
           
                </div>
                <div class="column-2">
                  <label for="cardnumber">Numero do Cartão</label>
                  <input type="password" id="cardnumber"/>
           
                  <span class="info">* CVV ou CVC é o código de segurança, três dígitos atrás do seu cartão.</span>
                </div>
              </div>
            </div>
           
            <div class="panel-footer">
              <button class="btn back-btn">Volta</button>
              <button class="btn next-btn">Próximo Passo</button>
            </div>
          </div>
          
          




<%- include("./partials/footer") %>